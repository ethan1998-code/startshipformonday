{
  "display_information": {
    "name": "Starship Dev",
    "description": "AI-powered Jira integration for Slack",
    "background_color": "#2c3e50"
  },
  "features": {
    "bot_user": {
      "display_name": "Starship",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/ticket",
        "description": "Create a new Jira ticket",
        "usage_hint": "summary",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "app_mentions:read",
        "chat:write",
        "commands",
        "files:read",
        "users:read",
        "channels:history",
        "groups:history",
        "mpim:history",
        "im:history"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "app_mention"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
